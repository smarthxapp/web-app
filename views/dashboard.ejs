                        <td><%= user.state %></td>
                      </tr>
                      <tr>
                        <th scope="row">Zip: </th>
                        <td><%= user.zip %></td>
                      </tr>
                    </tbody><!-- End Contact Info -->
                    <!-- PCP -->
                    <thead>
                      <tr>
                        <th scope="col" colspan="2">PCP</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="row">PCP Name: </th>
                        <td>Dr. Orange</td>
                      </tr>
                      <tr>
                        <th scope="row">PCP Phone: </th>
                        <td>(212) 123-1234</td>
