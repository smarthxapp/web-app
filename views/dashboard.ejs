                      </tr>
                    </tbody><!-- End History -->
                    <!-- Lifestyle -->
                    <thead>
                      <tr>
                        <th scope="col" colspan="2">Lifestyle</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="row">Alcohol: </th>
