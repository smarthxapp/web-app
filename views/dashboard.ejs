                    </tbody><!-- End Lifestyle -->
                    <!-- Contact Info -->
                    <thead>
                      <tr>
                        <th scope="col" colspan="2">Contact Info</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="row">Email: </th>
                        <td><%= user.email %></td>
                      </tr>
                      <tr>
                        <th scope="row">Phone Number: </th>
                        <td><%= user.phone %></td>
                      </tr>
                      <tr>
                        <th scope="row">Mobile Number: </th>
                        <td><%= user.mobile %></td>
                      </tr>
                      <tr>
                        <th scope="row">Address: </th>
                        <td><%= user.address1 %></td>
                      </tr>
                      <tr>
                        <th scope="row">Address 2: </th>
                        <td><%= user.address2 %></td>
                      </tr>
                      <tr>
                        <th scope="row">City: </th>
                        <td><%= user.city %></td>
                      </tr>
                      <tr>
