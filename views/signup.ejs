<%- include('partials/head') -%>
    <main>
      <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-8 d-flex flex-column align-items-center justify-content-center">

              <div class="d-flex justify-content-center py-4">
                <a href="/" class="logo d-flex align-items-center w-auto">
                  <img src="/img/logo.png" alt="">
                  <span class="d-block">Smart Hx</span>
                </a>
              </div><!-- End Logo -->

              <div class="card mb-3">

                <div class="card-body">

                  <div class="pt-4 pb-2">
                    <h1 class="card-title text-center pb-0 fs-4">Patient Registration Form</h1>
                    <p class="text-center small"><a href="hcp-signup">To register as an HCP, please click here.</a></p>
                  </div>

                  <div>
                    <% if (locals.messages.errors) { %>
                      <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                      <% }) %>    
                    <% } %>
                    <% if (locals.messages.info) { %>
                      <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                      <% }) %>    
                    <% } %>
                  </div>

                  <form class="needs-validation" action="/signup" method="POST" novalidate>

                    <!-- user type -->
                    <div class="mb-3">
                      <label for="userType" class="form-label">User Type</label><span class="text-danger">*</span>
                      <select class="form-control" id="userType" name="userType">
                        <option value="Patient">Patient</option>
                      </select>
                    </div>

                    <!-- insurance -->
                    <div class="mb-3">
                      <label for="insuranceName" class="form-label">Insurance provider</label><span class="text-danger">*</span><br>
                      <select id="insuranceName" name="insuranceName" required>
                        <option disabled selected value> -- Select Insurance -- </option>
                        <option value="UnitedHealthGroup">UnitedHealthGroup</option>
                        <option value="Anthem">Anthem</option>
                        <option value="Centene">Centene</option>
                        <option value="Humana">Humana</option>
                        <option value="HCSC">HCSC</option>
                        <option value="CVS">CVS Health</option>
                        <option value="Molina">Molina Healthcare</option>
                        <option value="Cigna">Cigna</option>
                        <option value="Kaiser Permanante">Kaiser Permanante</option>
                        <option value="Guidewell">Guidewell</option>
                      </select>
                      <div class="invalid-feedback">
                        Please select insurance.
                      </div>
                    </div>
                    <div class="mb-3">
                        <label for="insuranceId" class="form-label">Insurance Member ID</label><span class="text-danger">*</span>
                        <input type="text" class="form-control" id="insuranceId" name="insuranceId" required>
                    </div>

                    <!-- name -->
                    <div class="mb-3">
                        <label for="firstName" class="form-label">First Name</label><span class="text-danger">*</span>
                        <input type="text" class="form-control" id="firstName" name="firstName" required>
                    </div>
                    <div class="mb-3">
                        <label for="lastName" class="form-label">Last Name</label><span class="text-danger">*</span>
                        <input type="text" class="form-control" id="lastName" name="lastName" required>
                    </div>

                    <!-- gender -->
                    <div class="mb-3">
                      <label for="gender" class="form-label">Gender</label><span class="text-danger">*</span><br>
                      <select id="gender" name="gender" required>
                        <option disabled selected value> -- Select Gender -- </option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Not Specified">Not Specified</option>
                      </select>
                      <div class="invalid-feedback">
                        Please select gender.
                      </div>
                    </div>

                    <!-- race -->
                    <div class="mb-3">
                      <label for="race" class="form-label">Race</label><span class="text-danger">*</span><br>
                      <select id="race" name="race" required>
                        <option disabled selected value> -- Select Race -- </option>
                        <option value="American Indian Or Alaskan Native">American Indian Or Alaskan Native</option>
                        <option value="Asian">Asian</option>
                        <option value="Black Or African American">Black Or African American</option>
                        <option value="White">White</option>
                        <option value="Native Hawaiian Or Other Pacific Islander">Native Hawaiian Or Other Pacific Islander</option>
                        <option value="Two Or More Races">Two Or More Races</option>
                        <option value="Not Specified">Not Specified</option>
                      </select>
                      <div class="invalid-feedback">
                        Please select race.
                      </div>
                    </div>
                    
                    <!-- occupation -->
                    <div class="mb-3">
                      <label for="occupation" class="form-label">Occupation</label>
                      <input type="text" class="form-control" id="occupation" name="occupation">
                    </div>

                    <!-- dob -->
                    <div class="mb-3">
                      <label for="dob" class="form-label">Date of Birth</label><span class="text-danger">*</span><br>
                      <input type="date" id="dob" name="dob" min="1900-01-01" placeholder="YYYY-MM-DD" required><br>
                      <div class="invalid-feedback">
                        Please enter date of birth.
                      </div>
                    </div>

                    <!-- email -->
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Email address</label><span class="text-danger">*</span>
                      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" style="text-transform: lowercase;" required>
                      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>

                    <!-- phone number -->
                    <div class="row">
                      <div class="col-lg-6 col-sm-12 mb-3">
                        <label for="phone" class="form-label">Phone Number</label><span class="text-danger">*</span><br>
                        <input type="tel" id="phone" name="phone" pattern="[0-9]{10}" required><br>
                        <div id="phoneHelp" class="form-text">Format: 1234567890</div>
                        <div class="invalid-feedback">
                          Please enter phone number.
                        </div>
                      </div>
                      <div class="col-lg-6 col-sm-12 mb-3">
                        <label for="mobile" class="form-label">Mobile Number</label><br>
                        <input type="tel" id="mobile" name="mobile" pattern="[0-9]{10}"><br>
                        <div id="phoneHelp" class="form-text">Format: 1234567890</div>
                      </div>
                    </div>

                    <!-- address -->
                    <div class="row">
                      <div class="col-12 mb-3">
                        <label for="address1" class="form-label">Address</label><span class="text-danger">*</span>
                        <input type="text" class="form-control" id="address1" name="address1" placeholder="1234 Main St" required>
                      </div>
                      <div class="col-12 mb-3">
                        <label for="address2" class="form-label">Address 2</label>
                        <input type="text" class="form-control" id="address2" name="address2" placeholder="Apartment, Studio, or Floor">
                      </div>
                      <div class="col-lg-4 col-sm-12 mb-3">
                        <label for="city" class="form-label">City</label><span class="text-danger">*</span>
                        <input type="text" class="form-control" id="city" name="city" required>
                      </div>
                      <div class="col-lg-4 col-sm-12 mb-3">
                        <label for="state" class="form-label">State</label><span class="text-danger">*</span>
                        <select type="text" class="form-select" id="state" name="state" required>
                          <option disabled selected value>-- Select State --</option>
                          <option value="AL">Alabama</option>
                          <option value="AK">Alaska</option>
                          <option value="AZ">Arizona</option>
                          <option value="AR">Arkansas</option>
                          <option value="CA">California</option>
                          <option value="CO">Colorado</option>
                          <option value="CT">Connecticut</option>
                          <option value="DE">Delaware</option>
                          <option value="DC">District Of Columbia</option>
                          <option value="FL">Florida</option>
                          <option value="GA">Georgia</option>
                          <option value="HI">Hawaii</option>
                          <option value="ID">Idaho</option>
                          <option value="IL">Illinois</option>
                          <option value="IN">Indiana</option>
                          <option value="IA">Iowa</option>
                          <option value="KS">Kansas</option>
                          <option value="KY">Kentucky</option>
                          <option value="LA">Louisiana</option>
                          <option value="ME">Maine</option>
                          <option value="MD">Maryland</option>
                          <option value="MA">Massachusetts</option>
                          <option value="MI">Michigan</option>
                          <option value="MN">Minnesota</option>
                          <option value="MS">Mississippi</option>
                          <option value="MO">Missouri</option>
                          <option value="MT">Montana</option>
                          <option value="NE">Nebraska</option>
                          <option value="NV">Nevada</option>
                          <option value="NH">New Hampshire</option>
                          <option value="NJ">New Jersey</option>
                          <option value="NM">New Mexico</option>
                          <option value="NY">New York</option>
                          <option value="NC">North Carolina</option>
                          <option value="ND">North Dakota</option>
                          <option value="OH">Ohio</option>
                          <option value="OK">Oklahoma</option>
                          <option value="OR">Oregon</option>
                          <option value="PA">Pennsylvania</option>
                          <option value="RI">Rhode Island</option>
                          <option value="SC">South Carolina</option>
                          <option value="SD">South Dakota</option>
                          <option value="TN">Tennessee</option>
                          <option value="TX">Texas</option>
                          <option value="UT">Utah</option>
                          <option value="VT">Vermont</option>
                          <option value="VA">Virginia</option>
                          <option value="WA">Washington</option>
                          <option value="WV">West Virginia</option>
                          <option value="WI">Wisconsin</option>
                          <option value="WY">Wyoming</option>
                        </select>
                      </div>
                      <div class="col-lg-4 col-sm-12 mb-3">
                        <label for="zip" class="form-label">Zip</label><span class="text-danger">*</span>
                        <input type="text" class="form-control" id="zip" name="zip" pattern="[0-9]{5}" required>
                      </div>
                    </div>

                    <!-- family history -->
                    <!-- siblings -->
                    <!-- allergies -->
                    <!-- current medication -->

                    <div>

                      <!-- alcohol -->
                      <fieldset class="row mb-3">
                        <legend class="col-form-label col-md-4 col-sm-12 pt-0">Alcohol</legend>
                        <div class="col-md-8 col-sm-12 d-flex justify-content-start">
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="alcohol" id="alcohol2" value="Often">
                            <label class="form-check-label" for="alcohol2">
                              Often
                            </label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="alcohol" id="alcohol1" value="Sometimes">
                            <label class="form-check-label" for="alcohol1">
                              Sometimes
                            </label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="alcohol" id="alcohol0" value="Never">
                            <label class="form-check-label" for="alcohol0">
                              Never
                            </label>
                          </div>
                        </div>
                      </fieldset>

                      <!-- cigarettes -->
                      <fieldset class="row mb-3">
                        <legend class="col-form-label col-md-4 col-sm-12 pt-0">Cigarettes</legend>
                        <div class="col-md-8 col-sm-12 d-flex justify-content-start">
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="cigarettes" id="cigarettes2" value="Often">
                            <label class="form-check-label" for="cigarettes2">
                              Often
                            </label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="cigarettes" id="cigarettes1" value="Sometimes">
                            <label class="form-check-label" for="cigarettes1">
                              Sometimes
                            </label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="cigarettes" id="cigarettes0" value="Never">
                            <label class="form-check-label" for="cigarettes0">
                              Never
                            </label>
                          </div>
                        </div>
                      </fieldset>

                      <!-- marijuana -->
                      <fieldset class="row mb-3">
                        <legend class="col-form-label col-md-4 col-sm-12 pt-0">Marijuana</legend>
                        <div class="col-md-8 col-sm-12 d-flex justify-content-start">
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="marijuana" id="marijuana2" value="Often">
                            <label class="form-check-label" for="marijuana2">
                              Often
                            </label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="marijuana" id="marijuana1" value="Sometimes">
                            <label class="form-check-label" for="marijuana1">
                              Sometimes
                            </label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="marijuana" id="marijuana0" value="Never">
                            <label class="form-check-label" for="marijuana0">
                              Never
                            </label>
                          </div>
                        </div>
                      </fieldset>

                      <!-- exercise -->
                      <fieldset class="row mb-3">
                        <legend class="col-form-label col-md-4 col-sm-12 pt-0">Exercise</legend>
                        <div class="col-md-8 col-sm-12 d-flex justify-content-start">
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="exercise" id="exercise2" value="Often">
                            <label class="form-check-label" for="exercise2">
                              Often
                            </label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="exercise" id="exercise1" value="Sometimes">
                            <label class="form-check-label" for="exercise1">
                              Sometimes
                            </label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="exercise" id="exercise0" value="Never">
                            <label class="form-check-label" for="exercise0">
                              Never
                            </label>
                          </div>
                        </div>
                      </fieldset>

                      <!-- sexually active -->
                      <fieldset class="row mb-3">
                        <legend class="col-form-label col-md-4 col-sm-12 pt-0">Sexually Active</legend>
                        <div class="col-md-8 col-sm-12 d-flex justify-content-start">
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="sex" id="sex1" value="Yes">
                            <label class="form-check-label" for="sex1">
                              Yes
                            </label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="sex" id="sex0" value="No">
                            <label class="form-check-label" for="sex0">
                              No
                            </label>
                          </div>
                        </div>
                      </fieldset>

                      <!-- pregnant -->
                      <fieldset class="row mb-3">
                        <legend class="col-form-label col-md-4 col-sm-12 pt-0">Pregnant</legend>
                        <div class="col-md-8 col-sm-12 d-flex justify-content-start">
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="pregnant" id="pregnant2" value="Yes">
                            <label class="form-check-label" for="pregnant2">
                              Yes
                            </label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="pregnant" id="pregnant1" value="No">
                            <label class="form-check-label" for="pregnant1">
                              No
                            </label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="pregnant" id="pregnant0" value="Not Relevant">
                            <label class="form-check-label" for="pregnant0">
                              N/A
                            </label>
                          </div>
                        </div>
                      </fieldset>
                    </div>

                    <!-- pcp name -->
                    <!-- pcp number -->
                    <!-- pcp address -->

                    <!-- pharmacy name -->
